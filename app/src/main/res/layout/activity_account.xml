<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.duobao.yidianyou.activity.Setting.AccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/TextView_16dp_center"
            android:layout_marginLeft="16dp"
            android:text="账户1：" />

        <EditText
            android:id="@+id/account_name1_edt"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:textSize="16dp" />

        <TextView
            style="@style/TextView_16dp_center"
            android:text="密码：" />

        <EditText
            android:id="@+id/account_password1_edt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/TextView_16dp_center"
            android:layout_marginLeft="16dp"
            android:text="账户2：" />

        <EditText
            android:id="@+id/account_name2_edt"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:textSize="16dp" />

        <TextView
            style="@style/TextView_16dp_center"
            android:text="密码：" />

        <EditText
            android:id="@+id/account_password2_edt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/TextView_16dp_center"
            android:layout_marginLeft="16dp"
            android:text="账户3：" />

        <EditText
            android:id="@+id/account_name3_edt"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:textSize="16dp" />

        <TextView
            style="@style/TextView_16dp_center"
            android:text="密码：" />

        <EditText
            android:id="@+id/account_password3_edt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/TextView_16dp_center"
            android:layout_marginLeft="16dp"
            android:text="账户4：" />

        <EditText
            android:id="@+id/account_name4_edt"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:textSize="16dp" />

        <TextView
            style="@style/TextView_16dp_center"
            android:text="密码：" />

        <EditText
            android:id="@+id/account_password4_edt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/TextView_16dp_center"
            android:layout_marginLeft="16dp"
            android:text="账户5：" />

        <EditText
            android:id="@+id/account_name5_edt"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:textSize="16dp" />

        <TextView
            style="@style/TextView_16dp_center"
            android:text="密码：" />

        <EditText
            android:id="@+id/account_password5_edt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="16dp" />

    </LinearLayout>

    <Button
        android:id="@+id/account_btn"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_backgroud"
        android:text="确认"
        android:layout_marginBottom="30dp"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>
