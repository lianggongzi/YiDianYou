<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/initialize_ll"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/edt_backount"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        >
        <TextView
            android:id="@+id/initialize_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"/>
        <com.duobao.yidianyou.utils.ClearWriteEditText
            android:layout_marginLeft="10dp"
            android:id="@+id/initialize_edt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入初始化密码"
            android:textSize="14sp"
            android:inputType="numberPassword"
            android:background="@null"
            />
    </LinearLayout>
    <Button
        android:id="@+id/initialize_btn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="确定"
        android:textSize="14sp"
        android:background="@drawable/btn_backgroud"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        />
</LinearLayout>